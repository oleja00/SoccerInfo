<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="com.oleeja.soccerinfo.domain.leagues.LeagueModel" />

        <variable
            name="eventListener"
            type="com.oleeja.soccerinfo.presentation.activity_main.league.LeagueProfileFragmentContract.EventListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            style="@style/ProfileLeagueTextView"
            android:text="@{model.caption}" />

        <TextView
            style="@style/ProfileLeagueTextView"
            android:text="@{model.league}" />

        <TextView
            style="@style/ProfileLeagueTextView"
            android:text="@{model.year}" />

        <TextView
            style="@style/ProfileLeagueTextView"
            android:text="@{model.caption}" />

        <TextView
            style="@style/ProfileLeagueTextView"
            android:text="@{model.caption}" />

        <TextView
            style="@style/ProfileLeagueTextView"
            android:text="@{model.caption}" />

        <TextView
            style="@style/ProfileLeagueTextView"
            android:text="@{model.lastUpdated}" />

    </LinearLayout>
</layout>
